<h2>Search author</h2>
<form method="GET" action="/authors">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchParams.name %>">
    <button type="submit">Search</button>
</form>

<br>

<% authors.forEach(author => {  %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id %>">View</a>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <form action="/authors/<%= author.id %>?_method=DELETE" method="POST" >
        <button type="submit">Delete</button>
    </form>
<% }) %>

