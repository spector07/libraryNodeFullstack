<h2>Search book</h2>
<form method="GET" action="/books">
    <div>
        <label>Title</label>
        <input type="text" name="title" value="<%= searchParams.title %>">
    </div>
    <div>
        <label>Published after</label>
        <input type="date" name="publishedAfter" value="<%= searchParams.publishedAfter %>">
    </div>
    <div>
        <label>Published before </label>
        <input type="date" name="publishedBefore" value="<%= searchParams.publishedBefore %>">
    </div>
    <button type="submit">Search</button>
</form>


<div>
    <% books.forEach(book => {  %>
        <div><%= book.title %></div>
        <a href="/books/<%= book.id %>">View</a>
        <a href="/books/<%= book.id %>/edit">Edit</a>
        <form action="/books/<%= book.id %>?_method=DELETE" method="POST" >
            <button type="submit">Delete</button>
        </form>
    <% }) %>
</div>